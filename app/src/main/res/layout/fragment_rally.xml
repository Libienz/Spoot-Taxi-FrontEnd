<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RallyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_top_bar">

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginStart="80dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_taxi_white" />
        <TextView
            android:fontFamily="@font/bmjua_ttf"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="SPOOT TAXI"/>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/button_update"
        android:fontFamily="@font/bmjua_ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:text="Update"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp">

        <TableLayout
            android:id="@+id/rallyTL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/rallyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 시위"
                android:gravity="center"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/rallyDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="날짜"
                android:padding="15sp"
                android:textStyle="bold" />
            <!-- 테이블 헤더 -->

            <TableRow
                android:id="@+id/rallyProperty">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bubbleColor"
                    android:gravity="center"
                    android:text="집회 일시"
                    android:padding="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bubbleColor"
                    android:gravity="center"
                    android:text="장소"
                    android:padding="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bubbleColor"
                    android:gravity="center"
                    android:text="신고 인원"
                    android:padding="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/bubbleColor"
                    android:gravity="center"
                    android:text="관할서"
                    android:padding="10dp"
                    android:textStyle="bold" />
            </TableRow>


        </TableLayout>
    </ScrollView>




</FrameLayout>