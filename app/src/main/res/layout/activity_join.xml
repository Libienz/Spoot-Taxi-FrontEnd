<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_top_bar">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="80dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_taxi_white" />
                <TextView
                    android:fontFamily="@font/bmjua_ttf"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="SPOOT TAXI"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="80dp" >
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/profileImageView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_default_profile"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bmjua_ttf"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="프로필 이미지" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="10dp"
                        android:text="아이디"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/emailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/bmjua_ttf"
                        android:text="인증을 진행한 학교 이메일이 아이디로 사용됩니다."
                        android:textColor="#004DBF"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/inputEmail"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit"
                        android:hint="상명대학교이메일@sangmyung.kr"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textSize="15dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="10dp"
                        android:text="비밀번호"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/pwTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#B30000"
                        android:textSize="12dp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/bg_edit"
                    android:hint=" 영문 + 숫자 + 특수문자 8 ~ 16자"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="15dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="10dp"
                        android:text="비밀번호 확인"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/pwckTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text=""
                        android:textColor="#B30000"
                        android:textSize="12dp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/inputPwck"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_edit"
                    android:hint=" 패스워드를 다시 입력해 주세요."
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textSize="15dp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="10dp"
                        android:text="닉네임"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/nicknameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text=""
                        android:textColor="#B30000"
                        android:textSize="12dp" />
                </LinearLayout>


                <EditText
                    android:id="@+id/inputNickname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_edit"
                    android:hint=" 닉네임을 입력해 주세요."
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="10dp"
                        android:text="성별"
                        android:textColor="#000000"
                        android:textSize="15dp" />
                    <TextView
                        android:fontFamily="@font/bmjua_ttf"
                        android:id="@+id/genderTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text=""
                        android:textColor="#B30000"
                        android:textSize="12dp" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/inputGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/gender_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="여성"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/gender_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:padding="10dp"
                        android:text="남성"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/gender_etc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:padding="10dp"
                        android:text="기타"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                </RadioGroup>


            </LinearLayout>


            <android.widget.Button
                android:fontFamily="@font/bmjua_ttf"
                android:id="@+id/joinButton"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button"
                android:text="계정 만들기"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

            <android.widget.Button
                android:fontFamily="@font/bmjua_ttf"
                android:id="@+id/cancelBtn"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button"
                android:text="취소"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />


        </LinearLayout>
    </LinearLayout>
</layout>